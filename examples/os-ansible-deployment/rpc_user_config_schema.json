{
    "type": "object",
    "properties": {
        "cidr_networks": {
            "type": "object",
            "properties": {
                "container": {
                    "type": "string",
                    "format": "cidr",
                    "required": true
                },
                "snet": {
                    "type": "string",
                    "format": "cidr",
                    "required": true
                },
                "tunnel": {
                    "type": "string",
                    "format": "cidr",
                    "required": true
                },
                "storage": {
                    "type": "string",
                    "format": "cidr",
                    "required": true
                }
            }
        },
        "used_ips": {
            "type": "array",
            "items": {"type": "string"}
        },
        "global_overrides": {
            "type": "object",
            "properties": {
                "internal_lb_vip_address": {
                    "type": "string",
                    "format": "hostname"
                },
                "external_lb_vip_address": {
                    "type": "string",
                    "format": "hostname"
                },
                "lb_name": {"type": "string"},
                "tunnel_bridge": {"type": "string"},
                "management_bridge": {"type": "string"},
                "provider_networks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "network": {
                                "type": "object",
                                "properties": {
                                    "group_binds": {
                                        "type": "array",
                                        "items": {"type": "string"},
                                        "required": true
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": ["raw", "vxlan", "vlan", "flat"],
                                        "required": true
                                    },
                                    "container_bridge": {
                                        "type": "string",
                                        "enum": ["br-mgmt", "br-storage", "br-snet", "br-vlan", "br-vxlan"],
                                        "required": true
                                    },
                                    "container_interface": {
                                        "type": "string",
                                        "required": true
                                    },
                                    "ip_from_q": {
                                        "type": "string",
                                        "enum": ["container", "storage", "snet", "tunnel"]
                                    },
                                    "net_name": {"type": "string"},
                                    "range": {"type": "string"}
                                }
                            }
                        }
                    }
                },
                "debug": {"type": "boolean"}
            }
        },
        "infra_hosts": {
            "type": "object",
            "patternProperties": {
                "^infra[1-9][0-9]+$": {
                    "type": "object",
                    "properties": {
                        "ip": {
                            "type": "string",
                            "format": "hostname",
                            "required": true
                        }
                    }
                }
            }
        },
        "compute_hosts": {
            "type": "object",
            "patternProperties": {
                "^compute[1-9][0-9]+$": {
                    "type": "object",
                    "properties": {
                        "ip": {
                            "type": "string",
                            "format": "hostname",
                            "required": true
                        },
                        "host_vars": {
                            "type": "object",
                            "properties": {
                                "host_networks": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "type": {
                                                "type": "string",
                                                "enum": ["raw", "vlan_tagged", "bonded", "bridged"],
                                                "required": true
                                            },
                                            "device_name": {
                                                "type": "string",
                                                "required": true
                                            },
                                            "bond_master": {"type": "string"},
                                            "bond_primary": {"type": "boolean"},
                                            "tagged_device_name": {"type": "string"},
                                            "bridge_ports": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string",
                                                    "pattern": "^bond[0-9]+(\.[0-9]+)?"
                                                }
                                            },
                                            "address": {
                                                "type": "string",
                                                "format": "hostname"
                                            },
                                            "netmask": {
                                                "type": "string",
                                                "format": "hostname"
                                            },
                                            "gateway": {
                                                "type": "string",
                                                "format": "hostname"
                                            },
                                            "dns_nameservers": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string",
                                                    "format": "hostname"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "required": [
        "cidr_networks",
        "infra_hosts",
        "compute_hosts"
    ]
}
